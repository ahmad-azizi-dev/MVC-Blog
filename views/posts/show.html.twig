{% extends "layout/base.html.twig" %}

{% block title %}Home Page{% endblock %}

{% block content %}

    <h2 class="mt-4">{{ post['title'] }}</h2>
    <p class="m-2">Created By: <b class="text-dark"> {{ post['creator_name'] }}</b>
    <hr>
    <p>Created at: <b>{{ post['created_at'] }}</b></p>
    <div class="text-justify overflow-hidden"><p>{{ post['description'] }}</p></div>
    <hr>

    {% for comment in comments %}
        <div class="mb-4">
            <h6 class="mt-0">Created By: {{ comment['creator_name'] }}</h6>
            <h6 class="mt-0">Created at: {{ comment['created_at'] }}</h6>
            <P class="text-justify overflow-hidden">{{ comment['body'] }} </P>
            <div class=" mt-2 mb-2 row">
                <div class="col-md-12 mb-2">
                    <form action="/comments/delete" method="post">
                        <input name="id" type="hidden" value="{{ comment['id'] }}">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="card my-4">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
            <form action="/comments" method="post">
                <input name="post_id" type="hidden" value="{{ post['id'] }}">
                <div class="form-group">
                    <textarea name="body" class="form-control" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-12 text-center">MVC Blog Created By Ahmad Azizi</div>

{% endblock %}